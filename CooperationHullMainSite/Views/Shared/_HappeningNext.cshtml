<div class="col-xl-4 col-md-6 col-sm-12">
    <div class="happening-next-item">
        <p class="date-tag heading-xs">@Model.date.ToString("dd MMM")</p>
        <img class="header-image" src="@(Model.imagesName)" alt="@(Model.imageAltText)" />

        <div class="content">
            <h3 class="heading-sm">@(Model.title)</h3>
            <div class="description-block">
                <p class="text-sm">@(Model.description)</p>
                <a href='@(Model.eventLink)' target='_blank'>
                    <img src="~/assets/img/next arrow.svg" alt="arrow" />
                </a>
            </div>
        </div>
    </div>
</div>
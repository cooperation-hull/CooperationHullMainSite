@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-12 content-text content-page">

        <div class="top-image"></div>

        <div>
            <h1 class="heading-xl">@ViewData["Title"]</h1>
        </div>
        <div id="blog-post-summary-container" class="blog-post-summary-container">
            @foreach (PostSummary eventItem in Model.PostsList)
            {
                @Html.Partial("_BlogPostSummary", eventItem)
            }
        </div>
    
    </div>

</div>


